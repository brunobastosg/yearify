  "version": "0.2.0",
  "configurations": [
    {
      "name": "Local Run - Linux",
      "type": "debugpy",
      "request": "launch",
      "program": "main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/bin/python",
      "env": {
        "LOCAL_RUN": "true"
      }
    },
    {
      "name": "Local Run - Windows",
      "type": "debugpy",
      "request": "launch",
      "program": "main.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "${workspaceFolder}/.venv/Scripts/python.exe",
      "env": {
        "LOCAL_RUN": "true"
      }
    }
  ]
}
